<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMChatClient"   
        xmlns:Core="clr-namespace:MVVMChatClient.Core.ViewModel;assembly=MVVMChatClient.Core" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
        xmlns:z="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" x:Name="win"
    
        x:Class="MVVMChatClient.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000" WindowStyle="None" >


    <Window.DataContext>
        <Core:WindowsViewModel/>
    </Window.DataContext>
    <Window.Resources>

        <DataTemplate DataType="{x:Type Core:LogInViewModel}">
            <Border>
                <Border.Background>
                    <ImageBrush ImageSource="Images/CloudsLogInSignIn.jpg"/>
                </Border.Background>
                <local:Login Height="350" Width="500"/>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type Core:SignInViewModel}">
            <Border >
                <Border.Background>
                    <ImageBrush ImageSource="Images/CloudsLogInSignIn.jpg"/>
                </Border.Background>
                <local:SignIn Height="400" Width="500"/>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type Core:PasswordSenderViewModel}">
            <Border >
                <Border.Background>
                    <ImageBrush ImageSource="Images/CloudsLogInSignIn.jpg"/>
                </Border.Background>
                <local:PasswordSender Height="220" Width="500"/>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type Core:PublicChatViewModel}">
            <local:PublicChat/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type Core:PrivateChatViewModel}">
            <local:PrivateChat/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type Core:SettingsViewModel}">
            <local:Settings/>
        </DataTemplate>

    </Window.Resources>

    <z:Interaction.Triggers>
        <z:EventTrigger EventName="Closing">
            <ei:CallMethodAction TargetObject="{Binding CurrentView}" MethodName="Disconnect"/>
        </z:EventTrigger>
    </z:Interaction.Triggers>

    <Window.Background>
        <ImageBrush ImageSource="Images/download.jpg"/>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="Transparent"
              MouseLeftButtonDown="Grid_MouseLeftButtonDown"
              Panel.ZIndex="1">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Minimize"
                    Grid.Column="1"
                    Content="🗕"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#FFA61D1D"
                    FontSize="20"
                    Width="30" Height="30"
                    Click="Minimize_Click"/>

            <Button x:Name="Maximize"
                    Grid.Column="2"
                    Content="🗖"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#FFA61D1D"
                    FontSize="20"
                    Width="30" Height="30"
                    Click="Maximize_Click"/>

            <Button Grid.Column="3"
                    x:Name="Cloase"
                    Content="✘"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#FFA61D1D"
                    FontSize="20"
                    Width="30" Height="30"
                    Click="Cloase_Click"/>

            
        </Grid>

        <Frame Grid.Row="0"
               Grid.RowSpan="2"
               Content="{Binding CurrentView}"
               NavigationUIVisibility="Hidden"/>
    </Grid>

</Window>
